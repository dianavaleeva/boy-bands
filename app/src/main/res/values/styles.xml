<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FFC107</item>
        <item name="colorButtonNormal">#7b70f5</item>
    </style>

    <!-- Style of the whole question ViewGroup -->
    <style name="QuestionViewGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <!-- Style of question TextViews -->
    <style name="QuestionTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:background">@color/colorBackgroundQuestion</item>
        <item name="android:textSize">@dimen/question_text_size</item>
    </style>

    <!-- Style of the whole answers ViewGroup -->
    <style name="AnswerViewGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style of CheckBoxes and RadioButtons -->
    <style name="AnswerStyle">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <!-- Style of images -->
    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <!-- Style of the view separating questions -->
    <style name="SeparatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:background">@color/colorBackgroundQuestion</item>
    </style>

</resources>
